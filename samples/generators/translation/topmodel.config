# yaml-language-server: $schema=./topmodel.config.schema.json
---
app: Translation
modelRoot: ../../model
lockFileName: translation.topmodel.lock
generators:
  - ../../../TopModel.Generator.Translation
i18n:
  rootPath: i18n/{lang}/in
  defaultLang: fr_FR
  langs:
    - en_US
    - de_DE
translation:
  - tags:
      - front
      - back
    outputDirectory: ./
    rootPath: i18n/{lang}/out
    langs:
      - en_US
      - de_DE